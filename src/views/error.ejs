<%- include('./partials/header') %>

<body class="bg-light d-flex flex-column min-vh-100">
  <main class="flex-grow-1 d-flex align-items-center justify-content-center text-center">
    <div class="w-100 py-3">
      <%- include('./partials/errorCard', {
        code: typeof errorCode !== 'undefined' ? errorCode : 500,
        icon: typeof errorIcon !== 'undefined' ? errorIcon : 'bi-bug',
        title: typeof pageTitle !== 'undefined' ? pageTitle : 'Wewnętrzny błąd serwera',
        message: typeof message !== 'undefined' ? message : 'Coś poszło nie tak. Spróbuj ponownie później.',
        buttonText: typeof errorButtonText !== 'undefined' ? errorButtonText : 'Powrót do strony głównej',
        buttonLink: typeof errorButtonLink !== 'undefined' ? errorButtonLink : '/'
      }) %>
    </div>
  </main>

  <%- include('./partials/footer') %>
</body>
