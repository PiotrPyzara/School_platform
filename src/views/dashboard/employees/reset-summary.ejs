<%- include('../../partials/header') %>

<body class="bg-light">
  <div class="container py-5">
    <div class="row mb-4 g-3 align-items-stretch">
      <%- include('../../partials/navbar') %>
    </div>

    <%- include('../../partials/menu') %>
    <%- include('../../partials/flash') %>

    <div class="card p-4 shadow-sm">
      <h3 class="mb-4"><i class="bi bi-shield-lock me-2"></i>Hasło zostało zresetowane</h3>

      <p class="mb-3">
        Nowe hasło dla użytkownika <strong><%= employee.name %> <%= employee.surname %></strong> to:
      </p>

      <div class="alert alert-info">
        <code class="fs-5"><%= rawPassword %></code>
      </div>

      <p class="text-muted">
        To hasło jest widoczne tylko teraz i nie będzie ponownie dostępne po przeładowaniu strony.
      </p>

      <a href="/dashboard/employees/<%= employee._id %>" class="btn btn-primary mt-4">
        <i class="bi bi-arrow-left-circle"></i> Powrót do szczegółów pracownika
      </a>
    </div>
  </div>

  <%- include('../../partials/footer') %>
</body>
