<%- include('../../partials/header') %>
<body class="bg-light">
<div class="container py-5">

  <div class="row mb-4 g-3 align-items-stretch">
    <%- include('../../partials/navbar') %>
  </div>

  <%- include('../../partials/menu') %>
  <%- include('../../partials/flash') %>

  <div class="card p-4 shadow-sm">
    <h4 class="mb-4">Dodaj lekcję dla: <%= teacher.name %> <%= teacher.surname %></h4>

    <form action="/dashboard/schedule/create" method="POST">
      <input type="hidden" name="teacherId" value="<%= teacher._id %>">

      <div class="mb-3">
        <label for="institutionId" class="form-label">Placówka</label>
        <select class="form-select" name="institutionId" id="institutionId" required>
          <option value="">Wybierz placówkę</option>
          <% facilities.forEach(fac => { %>
            <option value="<%= fac._id %>"><%= fac.name %></option>
          <% }) %>
        </select>
      </div>

      <div class="mb-3">
        <label for="dayOfWeek" class="form-label">Dzień tygodnia</label>
        <select class="form-select" name="dayOfWeek" id="dayOfWeek" required>
          <% daysOfWeek.forEach(day => { %>
            <option value="<%= day.value %>"><%= day.label %></option>
          <% }) %>
        </select>
      </div>

      <div class="row mb-3">
        <div class="col-md-6">
          <label for="startTime" class="form-label">Godzina rozpoczęcia</label>
          <input type="time" class="form-control" name="startTime" id="startTime" required>
        </div>
        <div class="col-md-6">
          <label for="endTime" class="form-label">Godzina zakończenia</label>
          <input type="time" class="form-control" name="endTime" id="endTime" required>
        </div>
      </div>

      <div class="mb-3">
        <label for="room" class="form-label">Sala</label>
        <input type="text" class="form-control" name="room" id="room">
      </div>

      <div class="mb-3">
        <label for="lessonDescription" class="form-label">Opis lekcji</label>
        <textarea class="form-control" name="lessonDescription" id="lessonDescription" rows="2" required></textarea>
      </div>

      <div class="mb-3">
        <label for="notes" class="form-label">Notatki</label>
        <textarea class="form-control" name="notes" id="notes" rows="2"></textarea>
      </div>

      <button type="submit" class="btn btn-primary">Zapisz lekcję</button>
      <a href="/dashboard/schedule" class="btn btn-secondary ms-2">Anuluj</a>
    </form>
  </div>

</div>
<%- include('../../partials/footer') %>
