<div class="container text-center">
  <div class="card p-5 shadow-sm">
    <% if (typeof code !== 'undefined') { %>
      <h1 class="display-1 <%= code === 404 ? 'text-danger' : code === 500 ? 'text-warning' : 'text-secondary' %>">
        <%= code %>
      </h1>
    <% } %>
    
    <% if (typeof icon !== 'undefined') { %>
      <h2 class="mb-3"><i class="bi <%= icon %> me-2"></i><%= title %></h2>
    <% } else { %>
      <h2 class="mb-3"><%= title %></h2>
    <% } %>

    <p class="text-muted"><%= message %></p>

    <a href="<%= buttonLink || '/' %>" class="btn btn-primary mt-3">
      <i class="bi bi-arrow-left-circle"></i> <%= buttonText || 'PowrÃ³t' %>
    </a>
  </div>
</div>
